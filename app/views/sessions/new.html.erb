 <div class="mx-4 my-4">
  <h1 class="font-bold text-lg">Sign in<h1>

  <%= form_with model: @user, url: session_path do |form| %>

    <div>
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>

    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    
    <div class="flex w-min px-4 py-2 rounded-lg bg-gray-400">
      <%= form.submit "Log in" %>
    </div>
  <% end %>

  <%= link_to "Forgot your password", new_password_reset_path %>
</div>